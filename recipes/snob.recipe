#!/usr/bin/env python
# vim:fileencoding=utf-8

from calibre.web.feeds.news import BasicNewsRecipe


class Snob(BasicNewsRecipe):
    title = 'Сноб'
    __author__ = 'bugmen00t'
    description = 'Дискуссионное, информационное и общественное пространство для людей, которые живут в разных странах, говорят на разных языках, но думают по-русски.'  # noqa
    publisher = 'ООО «Сноб Медиа»'
    category = 'magazine'
    cover_url = 'https://snob.ru/indoc/tilda/995317/images/tild3233-6631-4664-b663-353636373235__e3057a5fee932ada1aaf.png'
    language = 'ru'
    no_stylesheets = False
    remove_javascript = False
    auto_cleanup = False
    oldest_article = 5
    max_articles_per_feed = 50

    remove_tags_before = dict(name='h1')

    remove_tags_after = dict(name='article')

    remove_tags = [
        dict(name='div', attrs={'class': 'entry__tags'}),
        dict(name='div', attrs={'class': 'entry__likes'})
    ]

    feeds = [('Сноб', 'https://snob.ru/rss/')]

    def get_article_url(self, article):
        link = article.get('link', None)
        if 'utm_source' in link:
            return link.split('?utm')[0]
