import re

from calibre.web.feeds.news import BasicNewsRecipe


class swiatczytnikow(BasicNewsRecipe):
    title = 'Świat Czytników'
    description = 'Czytniki e-książek w Polsce. Jak wybrać, kupić i korzystać z Amazon Kindle i innych'
    language = 'pl'
    __author__ = 'Tomasz Długosz'
    oldest_article = 7
    max_articles_per_feed = 100

    feeds = [('Świat Czytników - wpisy', 'http://swiatczytnikow.pl/feed')]

    remove_tags = [dict(name='ul', attrs={'class': 'similar-posts'}),
                   dict(name='div', attrs={'class': 'feedflare'})]

    preprocess_regexps = [
        (re.compile('<h3>Czytaj dalej:</h3>'), lambda match: '')]
