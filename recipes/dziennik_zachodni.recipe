    __author__ = 'fenuks'
    description = 'Gazeta Regionalna Dziennik Zachodni. Najnowsze Wiadomości Śląskie. Wiadomości Śląsk. Czytaj!'
    category = 'newspaper'
    language = 'pl'
    encoding = 'iso-8859-2'
    masthead_url = 'http://s.polskatimes.pl/g/logo_naglowek/dziennikzachodni.png?24'
    oldest_article = 7
    max_articles_per_feed = 100
    remove_empty_feeds = True
    no_stylesheets = True
    use_embedded_content = False
    ignore_duplicate_articles = {'title', 'url'}
    remove_tags_after = dict(attrs={'src': 'http://nm.dz.com.pl/dz.png'})
    remove_tags = [dict(id='mat-podobne'), dict(name='a', attrs={'class': 'czytajDalej'}), dict(attrs={
        'src': 'http://nm.dz.com.pl/dz.png'}), dict(attrs={'href': 'http://www.dziennikzachodni.pl/piano'}), dict(name='aside')]

    feeds = [
    ('Wszystkie', 'http://dziennikzachodni.feedsportal.com/c/32980/f/533764/index.rss?201302'),
    ('Wiadomości', 'http://dziennikzachodni.feedsportal.com/c/32980/f/533765/index.rss?201302'),
