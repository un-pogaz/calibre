    ('Opinie', 'http://www.dziennikzachodni.pl/rss/dziennikzachodni_regiony.xml?201302'),
    ('Blogi', 'http://www.dziennikzachodni.pl/rss/dziennikzachodni_blogi.xml?201302'),
    ('Serwisy', 'http://www.dziennikzachodni.pl/rss/dziennikzachodni_serwisy.xml?201302'),
    ('Sport', 'http://dziennikzachodni.feedsportal.com/c/32980/f/533766/index.rss?201302'),
