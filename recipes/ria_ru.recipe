        dict(name='div', attrs={'class': 'article__aggr'}),
        dict(name='div', attrs={'class': 'article__article-info'})
    ]

    feeds = [(
        'Лента новостей',
        'https://ria.ru/export/rss2/archive/index.xml'
    )]
